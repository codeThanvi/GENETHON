datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  EMPLOYEE
}

enum CallType {
  INCOMING
  OUTGOING
}

enum Sentiment {
  POSITIVE
  NEGATIVE
  NEUTRAL
}

model User {
  id        Int     @id @default(autoincrement())
  name      String
  email     String  @unique
  password  String   
  role      Role     @default(EMPLOYEE)
  username  String   
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  callLogs  CallLog[]
  @@unique([id,username])
}

model CallLog {
  id            Int      @id @default(autoincrement())
  employee      User     @relation(fields: [employeeId,employeeUsername], references: [id,username])
  employeeId    Int
  employeeUsername String
  phoneNumber   String
  callType      CallType
  duration      Int
  timestamp     DateTime @default(now())
  sentiment     Sentiment
  transcript    String?
  audioUrl      String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

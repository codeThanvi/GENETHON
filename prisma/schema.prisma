datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String
  role      Role    @default(employee)
  createdAt DateTime @default(now())
}

model CallLog {
  id            Int      @id @default(autoincrement())
  employeeName  String
  phoneNumber   String
  callType      String
  duration      Int
  timestamp     DateTime @default(now())
  sentiment     String
  transcript    String?
  audioUrl      String
}

enum Role {
  admin
  manager
  employee
}
